{
    "extends": "./node_modules/gts/tsconfig-google.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "rootDir": ".",
      "outDir": "build",
      "module": "commonjs",
      // "moduleResolution": "commonjs",  
      "esModuleInterop": true,    
      "target": "es2016",                                 
      "lib": ["dom", "es6"], 
      "forceConsistentCasingInFileNames": true,
      "strict": true,  
      // "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
      "allowSyntheticDefaultImports": true, // Allows importing default exports from modules
      "resolveJsonModule": true, // Allows importing .json files
      "allowJs": true, // Allows JavaScript files to be compiled
      "noEmit": false // Ensures no files are emitted, useful in some development scenarios
      // "skipLibCheck": true                                 /* Skip type checking all .d.ts files. */
    },
    "include": [
      "src/**/*",
      "test/**/*", 
      "global.d.ts", "src/__tests__", "jest.setup.ts", "jest.config.js" ],
      "exclude": ["node_modules", "build"] // Exclude the build directory
  }
      /* Visit https://aka.ms/tsconfig to read more about this file */

